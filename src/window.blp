using Gtk 4.0;

template WGWindow : ApplicationWindow {
  default-width: 600;
  default-height: 300;
  title: _("Word Game");
  
  [titlebar]
  Gtk.HeaderBar {
    styles ["flat"]
  }
  
  Gtk.WindowHandle {
    Gtk.Box content {
      orientation: vertical;
      spacing: 50;
      halign: center;
      hexpand: true;
      valign: center;
      vexpand: true;
    }
  }
}
