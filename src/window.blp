using Gtk 4.0;
using Adw 1;

template WGWindow : Adw.ApplicationWindow {
  title: _("Blurble");
  default-width: 350;
  default-height: 500;
  
  Gtk.WindowHandle {
    Gtk.Box {
      orientation: vertical;

      Adw.HeaderBar {
        styles ["flat"]

        [end]
        Gtk.MenuButton menu_button {
          icon-name: "open-menu-symbolic";
          menu-model: main_menu;
          can-focus: false;
        }
      }

      Gtk.Box main_content {
        orientation: vertical;
        spacing: 30;
        halign: center;
        hexpand: true;
        valign: center;
        vexpand: true;
      }
    }
  }
}

menu main_menu {
  item (_("Show keyboard"), "app.show-keyboard")
  item (_("About Blurble"), "app.about")
  item (_("Quit"), "app.quit")
}
