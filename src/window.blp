using Gtk 4.0;

template WGWindow : ApplicationWindow {
  default-width: 600;
  default-height: 300;
  title: _("Hello, Blueprint!");
  
  [titlebar]
  Gtk.HeaderBar {
    styles ["flat"]
  }
  
  Gtk.WindowHandle {
    Gtk.Box content {
      orientation: vertical;
      spacing: 0;
      halign: center;
      valign: center;
    }
  }
}
