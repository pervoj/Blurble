using Gtk 4.0;

template WGWindow : ApplicationWindow {
  title: _("Word Game");
  
  [titlebar]
  Gtk.HeaderBar {
    styles ["flat"]
  }
  
  Gtk.WindowHandle {
    Gtk.Box content {
      orientation: vertical;
      spacing: 30;
      halign: center;
      hexpand: true;
      valign: center;
      vexpand: true;
    }
  }
}
